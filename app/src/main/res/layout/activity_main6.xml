<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">
    <TextView
        android:id="@+id/ShoesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOES"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/img22"
        android:layout_width="255dp"
        android:layout_height="183dp"
        android:padding="16dp"
        android:src="@drawable/img_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ShoesTextView" />

    <ImageView
        android:id="@+id/img23"
        android:layout_width="254dp"
        android:layout_height="178dp"
        android:padding="16dp"
        android:src="@drawable/img_23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img22" />

    <ImageView
        android:id="@+id/img24"
        android:layout_width="257dp"
        android:layout_height="190dp"
        android:padding="16dp"
        android:src="@drawable/img_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img23" />

    <TextView
        android:id="@+id/ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL BAGS ARE JUST 999/-"
        android:layout_marginTop="25sp"
        app:layout_constraintTop_toBottomOf="@+id/img24"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
